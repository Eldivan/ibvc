<div class="jumbotron formulario">
<p id="notice"><%= notice %></p>

<h1>Criança</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sexo</th>
      <th>Data de Nascimento </th>
      <th>Código do Responsável</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.name %></td>
        <td><%= child.sex %></td>
        <td><%= child.date_birth %></td>
        <td><%= child.user.id %></td>
        <td><%= link_to 'Mostrar', child %></td>
        <td><%= link_to 'Editar', edit_child_path(child) %></td>
        <td><%= link_to 'Excluir', child, method: :delete, data: { confirm: 'Tem certeza da exclusão ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to 'Novo Cadastro', new_child_path %>
