<div class="jumbotron formulario">
<p id="notice"><%= notice %></p>

<h1>Departamentos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Lider do Departamento </th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departaments.each do |departament| %>
      <tr>
        <td><%= departament.name %></td>
        <td><%= departament.departament_head %></td>
        <td><%= departament.user %></td>
        <td><%= link_to 'Mostar', departament %></td>
        <td><%= link_to 'Editar', edit_departament_path(departament) %></td>
        <td><%= link_to 'Excluir', departament, method: :delete, data: { confirm: 'Confirma a exclusÃ£o do departamento?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
