<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sexo</th>
      <th>Cpf</th>
      <th>Identidade</th>
      <th>Data de Nascimento</th>
      <th>Celular</th>
      <th>E-mail</th>
      <th>Data Inclusão</th>
      <th>Estado Civil</th>
      <th>Profissão</th>
     
      <th>Ativo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.sex %></td>
        <td><%= user.cpf %></td>
        <td><%= user.identity %></td>
        <td><%= user.date_birth %></td>
        <td><%= user.cell_phone %></td>
        <td><%= user.email %></td>
        <td><%= user.date_inclusion %></td>
        <td><%= user.marital_status %></td>
        <td><%= user.professional %></td>
        <td><%= user.admin %></td>
        <td><%= user.active %></td>
        <td><%= link_to 'Mostrar', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Apagar', user, method: :delete, data: { confirm: 'Tem certeza da exclusão ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Usuário', new_user_path %>
